{
	"name": "ai-powered-client-personas",
	"version": "1.0.0",
	"description": "AI-Powered Client Personas for Student Project Simulations",
	"main": "dist/server/index.js",
	"scripts": {
		"dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
		"dev:server": "nodemon --exec ts-node src/server/index.ts",
		"dev:client": "webpack serve --mode development",
		"build": "npm run build:server && npm run build:client",
		"build:server": "tsc --project tsconfig.server.json",
		"build:client": "webpack --mode production",
		"start": "node dist/server/index.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/**/*.{ts,tsx}",
		"lint:fix": "eslint src/**/*.{ts,tsx} --fix",
		"format": "prettier --write src/**/*.{ts,tsx,json,md}",
		"type-check": "tsc --noEmit",
		"clean": "rimraf dist node_modules/.cache",
		"docker:build": "docker build -t ai-personas .",
		"docker:run": "docker run -p 3000:3000 ai-personas"
	},
	"keywords": [
		"ai",
		"personas",
		"education",
		"chat",
		"real-time",
		"typescript",
		"react",
		"node"
	],
	"author": "ProjectAgents Team",
	"license": "MIT",
	"dependencies": {
		"express": "^4.18.2",
		"cors": "^2.8.5",
		"helmet": "^7.1.0",
		"morgan": "^1.10.0",
		"dotenv": "^16.3.1",
		"bcryptjs": "^2.4.3",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.0.3",
		"socket.io": "^4.7.4",
		"multer": "^1.4.5-lts.1",
		"aws-sdk": "^2.1490.0",
		"openai": "^4.20.1",
		"winston": "^3.11.0",
		"express-rate-limit": "^7.1.5",
		"express-validator": "^7.0.1",
		"compression": "^1.7.4",
		"express-session": "^1.17.3",
		"connect-mongo": "^5.1.0",
		"uuid": "^9.0.1",
		"moment": "^2.29.4",
		"lodash": "^4.17.21"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/cors": "^2.8.17",
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.11",
		"@types/compression": "^1.7.5",
		"@types/express-session": "^1.17.10",
		"@types/uuid": "^9.0.7",
		"@types/lodash": "^4.14.202",
		"@types/node": "^20.10.0",
		"typescript": "^5.3.2",
		"ts-node": "^10.9.1",
		"nodemon": "^3.0.2",
		"concurrently": "^8.2.2",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1",
		"html-webpack-plugin": "^5.5.3",
		"ts-loader": "^9.5.1",
		"css-loader": "^6.8.1",
		"style-loader": "^3.3.3",
		"file-loader": "^6.2.0",
		"url-loader": "^4.1.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"@types/react": "^18.2.45",
		"@types/react-dom": "^18.2.18",
		"react-router-dom": "^6.20.1",
		"@types/react-router-dom": "^5.3.3",
		"socket.io-client": "^4.7.4",
		"axios": "^1.6.2",
		"jest": "^29.7.0",
		"@types/jest": "^29.5.8",
		"ts-jest": "^29.1.1",
		"jest-environment-jsdom": "^29.7.0",
		"@testing-library/react": "^13.4.0",
